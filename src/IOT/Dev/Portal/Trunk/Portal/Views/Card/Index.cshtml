@model IEnumerable<DC.Data.Card>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table>
    <tr>
        <th>
            Date Issued
        </th>
        <th>
            Public Key
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateIssued)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
           @* @Html.ActionLink("Details", "Balances", new { id=item.CardId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.CardId })
        </td>
    </tr>
}

</table>
