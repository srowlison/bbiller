@model IEnumerable<DC.Data.Address>

@{
    ViewBag.Title = "Index";
}

<h2>Address</h2>
 @if (Model.Count()==0)
      {
<p>
   
   
        @Html.ActionLink("Create New", "Create")
   
  
</p>
      }
else
{
     <div class="datagrid">
         <table class="table1">
             <thead>
                 <tr>

                     <th>
                         @Html.DisplayNameFor(model => model.AddressLine1)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.AddressLine2)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.Suburb)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.Postcode)
                     </th>
                     @* <th>
                        @Html.DisplayNameFor(model => model.CountryId)
                    </th>*@
                     <th>
                         @Html.DisplayNameFor(model => model.LandLine)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.Mobile)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.Fax)
                     </th>
                     <th></th>
                 </tr>
             </thead>
             @foreach (var item in Model)
             {
                 <tr>

                     @Html.HiddenFor(modelItem => item.Customer.UserId)

                     @Html.HiddenFor(modelItem => item.AddressTypeId)

                     <td>
                         @Html.DisplayFor(modelItem => item.AddressLine1)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.AddressLine2)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Suburb)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Postcode)
                     </td>
                     @* <td>
                        @Html.DisplayFor(modelItem => item.CountryId)
                    </td>*@
                     <td>
                         @Html.DisplayFor(modelItem => item.LandLine)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Mobile)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Fax)
                     </td>
                     <td>
                         @Html.ActionLink("Edit", "Edit", new { id = item.ID })

                     </td>
                 </tr>
             }

         </table>
 </div>
 }